@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Men√∫ ONG - ProjectPlanning</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f8fa;
            height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 60px; 
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .card-menu {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            padding: 40px 30px;
            text-align: center;
            max-width: 450px;
            width: 90%;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .card-menu:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 24px rgba(0, 0, 0, 0.1);
        }

        .menu-btn {
            width: 100%;
            margin: 12px 0;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        h2 {
            font-weight: 600;
            margin-bottom: 25px;
        }

        .icon {
            font-size: 1.3rem;
        }

        .footer-note {
            margin-top: 25px;
            color: #777;
            font-size: 0.9rem;
        }

        .user-info {
            background: #e3f2fd;
            padding: 12px;
            border-radius: 8px;
            margin-bottom: 20px;
            font-size: 0.95rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light bg-light justify-content-between px-4 py-2">
        <span class="navbar-brand mb-0 h4">ProjectPlanning</span>
        <button id="logoutBtn" class="btn btn-outline-danger btn-sm">Cerrar sesi√≥n</button>
    </nav>

    <div class="card-menu mt-5">
        <div class="user-info">
            <strong>üë§ Usuario:</strong> <span id="username"></span><br>
            <strong>üè¢ Rol:</strong> ONG que ofrece proyectos
        </div>

        <h2>Men√∫ ONG</h2>

        <button class="btn btn-primary menu-btn" onclick="window.location.href='/Project/Create'">
            <span class="icon">üì¢</span> Publicar un proyecto
        </button>

        <button class="btn btn-outline-primary menu-btn" onclick="viewMyProjects()">
            <span class="icon">üìã</span> Ver mis proyectos
        </button>

        <p class="footer-note">Gestiona tus proyectos desde este panel</p>
    </div>

    <script>
        function checkBonitaAccess() {
            const sessionId = localStorage.getItem("bonitaSessionId");
            const apiToken = localStorage.getItem("bonitaApiToken");
            const rolesJson = localStorage.getItem("bonitaRoles");
            const username = localStorage.getItem("bonitaUsername");

            console.log("Verificando acceso a OngMenu...");
            console.log("SessionId:", sessionId ? "‚úì" : "‚úó");
            console.log("ApiToken:", apiToken ? "‚úì" : "‚úó");

            // Si no hay sesi√≥n, redirigir a login
            if (!sessionId || !apiToken) {
                console.warn("No hay sesi√≥n, redirigiendo a login...");
                window.location.href = "/AuthView/Login";
                return;
            }

            // Mostrar nombre de usuario
            document.getElementById("username").textContent = username || "N/A";

            const roles = JSON.parse(rolesJson || "[]");
            console.log("Roles:", roles);

            // Verificar que tiene rol de offering projects
            const hasOfferingRole = roles.some(r => 
                String(r).toLowerCase().includes("offering_projects")
            );

            if (!hasOfferingRole) {
                console.warn("Usuario NO tiene rol de offering projects, redirigiendo a ProjectList...");
                window.location.href = "/AuthView/ProjectList";
            }
        }

        function viewMyProjects() {
            window.location.href = "/AuthView/ProjectList";
        }

        function logout() {
            console.log("Cerrando sesi√≥n...");
            localStorage.clear();
            window.location.href = "/AuthView/Login";
        }

        // Event listeners
        document.getElementById("logoutBtn").addEventListener("click", logout);

        // Verificar acceso al cargar
        checkBonitaAccess();
    </script>
</body>
</html>
