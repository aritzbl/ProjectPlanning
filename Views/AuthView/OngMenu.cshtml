@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Men√∫ ONG - ProjectPlanning</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f8fa;
            height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 60px; /* üîπ deja espacio para la navbar */
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .menu-container {
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            text-align: center;
        }

        .menu-container button {
            width: 260px;
            margin: 10px;
            font-size: 1.1rem;
            padding: 10px 20px;
        }

        h2 {
            font-weight: 600;
            margin-bottom: 25px;
        }
    </style>
</head>
<body>
    <!-- üîπ Barra superior -->
    <nav class="navbar navbar-light bg-light justify-content-between px-4 py-2">
        <span class="navbar-brand mb-0 h4">ProjectPlanning</span>
        <button id="logoutBtn" class="btn btn-outline-danger btn-sm">Cerrar sesi√≥n</button>
    </nav>

    <!-- üîπ Contenido principal -->
    <div class="menu-container">
        <h2>Men√∫ ONG</h2>
        <button class="btn btn-primary" onclick="window.location.href='/Project/Create'">Publicar un proyecto</button>
        <button class="btn btn-outline-primary" onclick="window.location.href='/AuthView/ProjectList'">Ver proyectos publicados</button>
    </div>

    <!-- üîπ Script de logout -->
    <script>
        document.getElementById("logoutBtn").addEventListener("click", () => {
            localStorage.removeItem("jwt");
            window.location.href = "/AuthView/Login";
        });
    </script>
</body>
</html>
