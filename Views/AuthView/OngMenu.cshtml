@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MenÃº ONG - ProjectPlanning</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #f7f8fa;
            height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            padding-top: 60px; 
            font-family: 'Segoe UI', sans-serif;
        }

        .navbar {
            position: fixed;
            top: 0;
            width: 100%;
            z-index: 1000;
            box-shadow: 0 2px 6px rgba(0, 0, 0, 0.05);
        }

        .card-menu {
            background: #fff;
            border-radius: 15px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
            padding: 40px 30px;
            text-align: center;
            max-width: 450px;
            width: 90%;
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

        .card-menu:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 24px rgba(0, 0, 0, 0.1);
        }

        .menu-btn {
            width: 100%;
            margin: 12px 0;
            padding: 12px;
            font-size: 1.1rem;
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 8px;
        }

        h2 {
            font-weight: 600;
            margin-bottom: 25px;
        }

        .icon {
            font-size: 1.3rem;
        }

        .footer-note {
            margin-top: 25px;
            color: #777;
            font-size: 0.9rem;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-light bg-light justify-content-between px-4 py-2">
        <span class="navbar-brand mb-0 h4">ProjectPlanning</span>
        <button id="logoutBtn" class="btn btn-outline-danger btn-sm">Cerrar sesiÃ³n</button>
    </nav>

    <div class="card-menu mt-5">
        <h2>Menu GNO</h2>

        <button class="btn btn-primary menu-btn" onclick="window.location.href='/Project/Create'">
            <span class="icon">ðŸ“¢</span> Publish a project
        </button>

        <button class="btn btn-outline-primary menu-btn" onclick="window.location.href='/AuthView/ProjectList'">
            <span class="icon">ðŸ“‹</span> View published projects
        </button>

    </div>

    <script>
        
        async function checkOngAccess() {
            const token = localStorage.getItem("jwt");
            if (!token) {
                window.location.href = "/AuthView/Login";
                return;
            }

            const res = await fetch("http://localhost:5054/api/auth/profile", {
                headers: { "Authorization": "Bearer " + token }
            });

            if (!res.ok) {
                localStorage.removeItem("jwt");
                window.location.href = "/AuthView/Login";
                return;
            }

            const profile = await res.json();
            if (profile.isOfferingOng) {
                window.location.href = "/AuthView/ProjectList"; 
            }
        }

        
        document.getElementById("logoutBtn").addEventListener("click", () => {
            localStorage.removeItem("jwt");
            window.location.href = "/AuthView/Login";
        });

        checkOngAccess();
    </script>
</body>
</html>
