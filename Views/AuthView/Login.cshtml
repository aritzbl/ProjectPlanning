@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Login - Bonita</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex align-items-center justify-content-center" style="min-height:100vh;background:#f7f8fa">
    <div class="card p-4" style="max-width:420px;width:100%">
        <h3 class="text-center mb-4">Login Bonita</h3>

        <form id="loginForm" autocomplete="off">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input id="username" class="form-control" value="walter.bates" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input id="password" type="password" class="form-control" value="bpm" required />
            </div>
            <button id="loginBtn" type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <div id="result" class="mt-3 text-center"></div>
    </div>

    <script>
        document.getElementById("loginForm").addEventListener("submit", async (e) => {
            e.preventDefault();

            const btn = document.getElementById("loginBtn");
            const resultDiv = document.getElementById("result");

            btn.disabled = true;
            btn.textContent = "Ingresando...";
            resultDiv.textContent = "";
            resultDiv.classList.remove("text-danger", "text-success");

            try {
                const res = await fetch("/api/bonitaauth/login", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify({
                        username: document.getElementById("username").value.trim(),
                        password: document.getElementById("password").value
                    })
                });

                const json = await res.json();

                if (!res.ok) {
                    throw new Error(json.message || "Error en login");
                }


                localStorage.setItem("bonitaSessionId", json.sessionId);
                localStorage.setItem("bonitaApiToken", json.apiToken);
                localStorage.setItem("bonitaUserId", json.userId || "");
                localStorage.setItem("bonitaUsername", document.getElementById("username").value.trim());
                localStorage.setItem("bonitaRoles", JSON.stringify(json.roles || []));

                console.log("✓ Login exitoso");
                console.log("✓ Roles guardados:", json.roles);
                
                // Determinar redirección
                const roles = json.roles || [];
                const hasOfferingProjects = roles.some(r => 
                    String(r).toLowerCase().includes("offering_projects")
                );

                const redirectUrl = hasOfferingProjects ? "/AuthView/OngMenu" : "/AuthView/ProjectList";
                console.log("✓ Redirigiendo a:", redirectUrl);

                resultDiv.textContent = "✅ Redirigiendo...";
                resultDiv.classList.add("text-success");

                // REDIRECCIÓN FORZADA
                window.location.replace(redirectUrl);

            } catch (err) {
                console.error("❌ Error:", err);
                resultDiv.textContent = "❌ " + (err.message || "Error de conexión");
                resultDiv.classList.add("text-danger");
                btn.disabled = false;
                btn.textContent = "Login";
            }
        });
    </script>
</body>
</html>