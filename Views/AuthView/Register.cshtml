@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <title>Login - Bonita</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="d-flex align-items-center justify-content-center" style="min-height:100vh;background:#f7f8fa">
    <div class="card p-4" style="max-width:420px;width:100%">
        <h3 class="text-center mb-4">Login Bonita</h3>

        <form id="loginForm" autocomplete="off">
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input id="username" class="form-control" value="walter.bates" required />
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input id="password" type="password" class="form-control" value="bpm" required />
            </div>
            <button id="loginBtn" type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <div id="result" class="mt-3 text-center"></div>
    </div>

    <script>
        const form = document.getElementById("loginForm");
        const btn = document.getElementById("loginBtn");
        const resultDiv = document.getElementById("result");

        form.addEventListener("submit", async (e) => {
            e.preventDefault();

            btn.disabled = true;
            btn.textContent = "Ingresando...";
            resultDiv.textContent = "";
            resultDiv.classList.remove("text-danger", "text-success");

            const data = {
                username: document.getElementById("username").value.trim(),
                password: document.getElementById("password").value
            };

            try {
                const res = await fetch("/api/bonitaauth/login", {
                    method: "POST",
                    headers: { "Content-Type": "application/json" },
                    body: JSON.stringify(data)
                });

                const json = await res.json();
                console.log("Respuesta del servidor:", json);

                if (res.ok && json.sessionId && json.apiToken) {
                    // Guardar en localStorage
                    localStorage.setItem("bonitaSessionId", json.sessionId);
                    localStorage.setItem("bonitaApiToken", json.apiToken);
                    localStorage.setItem("bonitaUserId", json.userId ?? "");
                    localStorage.setItem("bonitaUsername", data.username);
                    
                    // Guardar roles como JSON
                    const roles = Array.isArray(json.roles) ? json.roles : [];
                    localStorage.setItem("bonitaRoles", JSON.stringify(roles));
                    console.log("Roles guardados:", roles);

                    resultDiv.textContent = "✅ Login exitoso";
                    resultDiv.classList.add("text-success");

                    // Determinar redirección según roles
                    const hasRole = (name) => roles.some(r => String(r).toLowerCase().includes(name.toLowerCase()));
                    
                    let goTo = "/AuthView/ProjectList"; // Por defecto: ONG que ofrece recursos
                    
                    if (hasRole("offering_projects") || hasRole("ONG_Offering_Projects")) {
                        goTo = "/AuthView/OngMenu";
                    }

                    console.log("Redirigiendo a:", goTo);
                    
                    // Redirección inmediata sin setTimeout
                    window.location.href = goTo;
                    
                } else {
                    throw new Error(json.message || "Credenciales inválidas");
                }
            } catch (err) {
                console.error("Error en login:", err);
                resultDiv.textContent = "❌ " + (err.message || "Error de conexión");
                resultDiv.classList.add("text-danger");
                btn.disabled = false;
                btn.textContent = "Login";
            }
        });
    </script>
</body>
</html>
